<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fit.korea2canada.com.jjfitv1.DoExercise">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="341dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Workout"
        android:textAlignment="center"
        android:textColor="?attr/colorControlNormal"
        android:textSize="35sp"
        circular:layout_constraintEnd_toEndOf="parent"
        circular:layout_constraintStart_toStartOf="parent"
        circular:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWorkoutName"
        android:layout_width="354dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="monospace"
        android:text="1. Jumping Jack"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        circular:layout_constraintEnd_toEndOf="parent"
        circular:layout_constraintStart_toStartOf="parent"
        circular:layout_constraintTop_toBottomOf="@+id/textView5" />


    <WebView
        android:id="@+id/imgWorkout"
        android:layout_width="377dp"
        android:layout_height="338dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        circular:layout_constraintEnd_toEndOf="parent"
        circular:layout_constraintStart_toStartOf="parent"
        circular:layout_constraintTop_toBottomOf="@+id/txtWorkoutName" />

    <com.lylc.widget.circularprogressbar.CircularProgressBar
        android:id="@+id/progBar"
        style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="15000"
        android:onClick="onClickProgress"
        android:progress="0"
        circular:cpb_subtitle="subtitle"
        circular:cpb_title="Title"
        circular:layout_constraintBottom_toBottomOf="parent"
        circular:layout_constraintEnd_toEndOf="parent"
        circular:layout_constraintHorizontal_bias="0.497"
        circular:layout_constraintStart_toStartOf="parent"
        circular:layout_constraintTop_toBottomOf="@+id/imgWorkout"
        circular:layout_constraintVertical_bias="0.421" />


</android.support.constraint.ConstraintLayout>
